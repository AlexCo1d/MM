{
  "gradient_accumulation_steps": 1,
  "steps_per_print": 1000,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 3e-5,
      "weight_decay": 0.02
    }
  },
  "fp16": {
    "enabled": true
  },
  "zero_optimization": {
        "stage": 2,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        },
        "allgather_partitions": true,
        "allgather_bucket_size": 5e8,
        "overlap_comm": true,
        "reduce_scatter": true,
        "reduce_bucket_size": 5e8,
        "contiguous_gradients": true
  }

}